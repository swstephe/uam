doctype html
html(lang='en')
  head
    title Datepicker
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible',content='IE=edge')
    meta(name='description',content='')
    meta(name='viewport',content='initial-scale=1,maximum-scale=1,user-scalable=no')
    link(rel='stylesheet',href='/angular-material/angular-material.css')
    link(rel='stylesheet',href='http://fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic')
    style.
      .validation-messages {
        font-size: 11px;
        color: #F44336;
        margin: 0 0 0 56px;
      }
  body(ng-app='myApp',layout='column',ng-controller='SimpleFormController')
    md-toolbar.md-toolbar-tools
      h1 Datepicker
    md-content
      .md-body-1(layout-margin,layout-padding)
        | Please specify your last eligible dive to avoid an extra check dive!
        br
        | Your dive must not be older than 3 months.
      form(name='simple',novalidate,layout-margin)
        md-checkbox(ng-model='user.hasDive') I have an eligible dive
        div(layout='column',style='margin:0 0 24px 32px;',layout-margin)
          md-input-container(md-no-float)
            input(
              name='diveSite'
              ng-model='user.diveSite'
              ng-disabled='!user.hasDive'
              required
              placeholder="Dive Site"
              maxlength=32
            )
            div(
              ng-messages='simple.diveSite.$error'
              ng-show='simple.diveSite.$dirty'
            )
              div(ng-message='required') Please provide a dive site name!
          md-datepicker(
            name='diveDate'
            ng-disabled='!user.hasDive'
            ng-model='user.diveDate'
            required
            md-min-date='minDate'
            md-max-date='maxDate'
            style='margin-left: -16px;'
          )
          .validation-messages(
            ng-messages='simple.diveDate.$error'
            ng-show='simple.diveDate.$dirty'
          )
            div(ng-message='required') Please provide a date!
        md-button.md-raised.md-primary(
          ng-click="register(user)"
          ng-disabled="user.hasDive && simple.$invalid"
        ) Register
      md-divider
      div(layout-margin)
        code {{registeredUser|json}}
    script(src='/angular/angular.js')
    script(src='/angular-animate/angular-animate.js')
    script(src='/angular-messages/angular-messages.js')
    script(src='/angular-aria/angular-aria.js')
    script(src='/angular-material/angular-material.js')
    script
      :coffee-script
        angular.module 'datepicker', []
        .controller 'SimpleFormController', [
          '$scope'
          ($scope) ->
            $scope.registeredUser = {}
            $scope.nowDate = new Date()
            $scope.minDate = new Date(
              $scope.nowDate.getFullYear()
              $scope.nowDate.getMonth() - 3
              $scope.nowDate.getDate()
            )
            $scope.maxDate = new Date(
              $scope.nowDate.getFullYear()
              $scope.nowDate.getMonth()
              $scope.nowDate.getDate() - 1
            )
            $scope.register = (user) ->
              $scope.registeredUser =
                hasDive: user.hasDive
                diveSite: user.diveSite
                diveDate: user.diveDate
        ]
        angular.module 'myApp', ['ngMaterial', 'ngMessages', 'datepicker']
