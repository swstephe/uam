doctype html
html(lang='en')
  head
    title Whiteframes
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible',content='IE=edge')
    meta(name='description',content='')
    meta(name='viewport',content='initial-scale=1,maximum-scale=1,user-scalable=no')
    link(rel='stylesheet',href='/angular-material/angular-material.css')
    link(rel='stylesheet',href='http://fonts.googleapis.com/css?family=Roboto:400,500,700,400italic')
  body(ng-app='myApp',layout='row')
    // Single column
    div(flex,layout='column')
      md-toolbar.md-toolbar-tools
        h1 Whiteframes and dividers
      md-content(flex,style='background-color:#E0E0E0;')
        div(style='background-color:white',layout-margin)
          .md-whiteframe-z2(layout-padding)
            h1.md-display-1 md-whiteframe-z2
          section
            .md-body-1(layout-padding) Topic #1
            md-divider
            .md-body-1(layout-padding) Topic #2
        div(style='background-color: white',layout-margin)
          div(layout='row')
            .md-whiteframe-z2(flex=50,layout-padding)
              h1.md-display-1 md-whiteframe-z2
            .md-whiteframe-z5(flex=50,layout-padding)
              h1.md-display-1 md-whiteframe-z5
          section
            .md-body-1(layout-padding) Topic #3
            md-divider
            .md-body-1(layout-padding) Topic #4
    
    script(src='/angular/angular.js')
    script(src='/angular-animate/angular-animate.js')
    script(src='/angular-aria/angular-aria.js')
    script(src='/angular-material/angular-material.js')
    script(type='text/javascript')
      :coffee-script
        angular.module 'myApp', ['ngMaterial']
