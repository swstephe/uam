doctype html
html(lang='en')
  head
    title Simple Layout
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible',content='IE=edge')
    meta(name='description',content='')
    meta(name='viewport',content='initial-scale=1,maximum-scale=1,user-scalable=no')
    link(rel='stylesheet',href='/angular-material/angular-material.css')
    link(rel='stylesheet',href='http://fonts.googleapis.com/css?family=Roboto:400,500,700,400italic')
    style(type='text/css').
      md-toolbar h1 {
        margin: auto;
        font-weight: 400;
      }
      div.layout-column div.flex {
        border: 1px dotted gray;
        background-color: #FFE0B2;  /* Orange 100 */
        text-align: center;
        padding: 16px;
      }
  body(ng-app='myApp',layout='column',ng-controller='LayoutController as lc')
    // Single column
    div(flex,layout='column',tabIndex=-1,role='main')
      md-toolbar(layout='row')
        h1 &nbsp;&nbsp;{{lc.screenSize}}
      md-content#content
        div(layout='column')
          div(flex) Always visible #1
          div(flex,hide-gt-sm) Visible on small #1
          div(flex,hide-sm,hide-lg) Visible on medium #1
          div(flex,hide-sm,hide-md) Visible on large #1
          div(flex,hide,show-sm) Visible on small #2
          div(flex,hide,show-md) Visible on medium #2
          div(flex,hide,show-lg) Visible on large #2
          div(flex,hide) Always hidden
          div(flex,hide,show) Always visible #2
    
    script(src='/angular/angular.js')
    script(src='/angular-animate/angular-animate.js')
    script(src='/angular-aria/angular-aria.js')
    script(src='/angular-material/angular-material.js')
    script(type='text/javascript')
      :coffee-script
        angular
        .module 'layout', []
        .controller 'LayoutController', [
          '$mdMedia'
          '$scope'
          ($mdMedia, $scope) ->
            self = @
            $scope.$watch(
              -> if $mdMedia('sm') then 'small' else if $mdMedia('md') then 'medium' else 'large'
              (size) -> self.screenSize = size
            )
            true
        ]
        angular.module 'myApp', ['ngMaterial','layout']
