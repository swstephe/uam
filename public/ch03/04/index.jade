doctype html
html(lang='en')
  != partial('../_header')
    link(rel='stylesheet',href='04.css')
  body(
    ng-app='myApp'
    layout='column'
    ng-controller='LayoutController as lc'
  )
    md-toolbar(layout='row',ng-class='lc.screenSize')
      h1 {{lc.title}}
    md-content#content(ng-class='lc.screenSize')
      h2 {{lc.sectionTitle}}
      | {{lc.sectionBody}}
    != partial('../_scripts')
    script(src='script.js')
    script
      :coffee-script
        angular.module 'myApp', ['ngMaterial','layout']
