doctype html
html(lang='en')
  head
    title Simple Layout
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible',content='IE=edge')
    meta(name='description',content='')
    meta(name='viewport',content='initial-scale=1,maximum-scale=1,user-scalable=no')
    link(rel='stylesheet',href='http://fonts.googleapis.com/css?family=Roboto:400,500,700,400italic')
    link(rel='stylesheet',href='/angular-material/angular-material.css')
    style.
      .flex {
        border: 1px dotted gray;
        padding: 8px;
      }
      .layout-row {
        background-color: #90Caf9;
      }
      .layout-column {
        background-color: #ffe0b2;
        text-align: center;
      }
  body(ng-app='myApp')
    div(layout='row')
      div(flex) Cell #1
      div(flex) Cell #2
      div(flex,layout='row')
        div(flex) Cell #3A
        div(flex) Cell #3B
    div(layout='row')
      div(flex,layout='column')
        div(flex) Cell #4A
        div(flex) Cell #4B
        div(flex) Cell #4C
      div(flex) Cell #5
    div(layout='column')
      div(flex,layout='row')
        div(flex) Cell #6A
        div(flex) Cell #6B
        div(flex) Cell #6C
      div(flex) Cell #7
    div(layout='row')
      div(flex=33) 33%
      div(flex) (66%)
    div(layout='row')
      div(flex=66) 66%
      div(flex) (9%)
      div(flex=25) 25%
    div(layout='column',style='margin-top:24px;')
      div(flex=20) 20%
      div(flex) (40%)
      div(flex) (40%)
    div(layout='column',style='height:200px;margin-top:24px;')
      div(flex=20) 20%
      div(flex) (40%)
      div(flex) (40%)
    div(layout='row')
      div(flex=33) 33%
      div(flex=75) 75%
    div(layout='row',style='margin-top:24px;')
      div(flex='initial',style='width:400px') initial
      div(flex=25) 25%
    div(layout='row',style='margin-top: 24px;')
      div(flex='auto',style='width: 400px') auto
      div(flex=25) 25%
    hr
    div(layout='row',layout-align='center center',style='height: 100px;')
      div(flex=10) Cell #1
      div(flex=10) Cell #2
      div(flex=10) Cell #3
    div(layout='row',layout-align='space-between start',style='height:100px; margin-top:24px;')
      div(flex=10) Cell #4
      div(flex=10) Cell #5
      div(flex=10) Cell #6
    div(layout='column',layout-align='space-around end',style='height:400px; margin-top:24px;')
      div(flex=25) Cell #7
      div(flex=25) Cell #8
      div(flex=25) Cell #9
    script(src='/angular/angular.js')
    script(src='/angular-animate/angular-animate.js')
    script(src='/angular-aria/angular-aria.js')
    script(src='/angular-material/angular-material.js')
    script
      :coffee-script
        angular.module 'myApp', ['ngMaterial']
