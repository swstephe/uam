extends ../layout

block vars
  - var body_attr = {'layout-fill': true}
  - var script = '01.js'
  - var style = '01.css'

block content
  md-toolbar
    .md-toolbar-tools Younderwater Dive Log
  md-content(layout='column',flex)
    section(layout='row',layout-wrap)
      div(flex=25,flex-md=50,flex-sm=100,ng-repeat='dive in dives')
        md-card
          md-card-content
            h1 {{dive.depth}} feet | {{dive.time}} min
            h2 {{dive.site}}
            h3 {{dive.location}}
          md-card-footer
            span.tag(ng-repeat='tag in dive.tags') {{tag.toString()}}

append scripts
  script
    :coffee-script
      angular.module 'myApp', ['ngMaterial', 'divelog']
