extends ../layout

block vars
  - var script = '02.js'
  - var style = '02.css'

block content
  md-toolbar
    .md-toolbar-tools Younderwater Dive Log
  md-content(layout='row',flex)
    md-sidenav.md-sidenav-left.md-whiteframe-z2(md-is-locked-open='true')
      md-toolbar.md-toobar-tools
        h1 Tags
      md-content(layout-padding)
        md-list
          md-list-item(ng-repeat='tag in tags')
            md-button.md-primary(
              ng-class="tag.selected ? 'md-raised md-accent' : ''"
              ng-click="toggleTag(tag)"
            ) {{tag.name}}
    md-content#main(flex, layout='column')
      section(layout='row',layout-wrap)
        div(
          flex=25
          flex-md=50
          flex-sm=100
          ng-repeat='dive in getFilteredDives()'
        )
          md-card
            md-card-content
              h1 {{dive.depth}} feet | {{dive.time}} min
              h2 {{dive.site}}
              h3 {{dive.location}}
            md-card-footer
              span.tag(ng-repeat='tag in dive.tags') {{tag.toString()}}

append scripts
  script
    :coffee-script
      angular.module 'myApp', ['ngMaterial', 'divelog']
