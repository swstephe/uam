md-bottom-sheet.md-list.md-has-header(
  style='background-color: #90CAF9'
  ng-cloak
)
  md-subheader Dive log entry actions
  md-list
    md-list-item(ng-repeat='action in actions')
      md-button.md-list-item-content(ng-click='doAction(action.done)')
        md-icon(ng-style="{'color': action.color}") {{action.icon}}
        span.md-inline-list-icon-label {{action.name}}
