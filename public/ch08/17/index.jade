extends ../layout

block vars
  - var controller = 'GridListController'
  - var script = '17.js'
  - var style = '17.css'
  - var title = "Grid list"

block content
  div(flex,layout='column',role='main')
    md-toolbar.md-toolbar-tools
      h1 Grid list
    md-content
      md-grid-list(
        md-row-height='3:2'
        md-cols=4
        md-cols-sm=2
        md-on-layout='onLayout($event)'
      )
        md-grid-tile(
          ng-repeat='item in palette'
          ng-class="item.light ? 'light-text' : 'dark-text'"
          ng-style="{'background-color': item.color}"
        ) {{item.name}}

append scripts
  script
    :coffee-script
      angular.module 'myApp', ['ngMaterial', 'gridlist']
