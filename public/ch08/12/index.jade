extends ../layout

block vars
  - var controller = 'GridListController'
  - var script = '12.js'
  - var style = '12.css'
  - var title = "Grid list"

block content
  md-toolbar.md-toolbar-tools
    h1 Grid list
  md-content
    md-grid-list(
      md-cols=8
      md-cols-md=4
      md-cols-sm=2
      md-row-height='4:3'
      md-row-height-sm='1:1'
      md-gutter='8px'
      md-gutter-md='4px'
      md-gutter-sm='1px'
    )
      md-grid-tile(
        ng-repeat='item in palette'
        ng-class="item.light ? 'light-text' : 'dark-text'"
        ng-style="{'background-color': item.color}"
      ) {{item.name}}

append scripts
  script
    :coffee-script
      angular.module 'myApp', ['ngMaterial', 'gridlist']
