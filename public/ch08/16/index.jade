extends ../layout

block vars
  - var controller = 'GridListController'
  - var script = '16.js'
  - var style = '16.css'
  - var title = "Grid list"

block content
  md-toolbar.md-toolbar-tools
    h1 Grid list
  md-content(flex)
    md-grid-list#pictureList(
      md-row-height='3:2'
      md-cols=5
      md-cols-md=4
      md-cols-sm=2
    )
      md-grid-tile(
        ng-repeat='picture in pictures'
        ng-click='selectPicture(picture, $event)'
      )
        md-grid-tile-footer(ng-hide='hideFooter()')
          h3 {{picture.title}}
        div(
          style={
            'width': '100%',
            'height': '100%',
            'background-size': 'calc(100%) calc(100%)'
          }
          ng-style="{'background-image':'url(../images/'+picture.src+')'}"
        )

append scripts
  script
    :coffee-script
      angular.module 'myApp', ['ngMaterial', 'gridlist']
