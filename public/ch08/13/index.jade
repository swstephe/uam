extends ../layout

block content
  md-toolbar.md-toolbar-tools
    h1 Grid list
  md-content
    md-grid-list(
      md-row-height='fit'
      md-cols=4
      md-cols-md=3
      md-cols-sm=2
      style={'height': '320px'}
    )
      md-grid-tile(
        ng-repeat='item in palette'
        ng-class="item.light ? 'light-text' : 'dark-text'"
        ng-style="{'background-color': item.color}"
      ) {{item.name}}
