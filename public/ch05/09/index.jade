extends ../layout

block vars
  - var body_attrs = {'layout-fill': true, 'ng-controller': 'DiveSitesController'}
  - var script = '09.js'
  - var title = "Dynamic tabs"

block content
  md-toolbar
    .md-toolbar-tools My My favorite dive sites
  md-content(flex)
    md-tabs(md-border-bottom)
      md-tab(ng-repeat='site in diveSites',label='{{site.toString()}}')
        md-content.md-padding
          h1.md-display-1 {{site.toString()}}
          p.md-body-1 This is a beatiful dive site!
  md-toolbar.md-accent
    .md-toolbar-tools Younderwater, 2015

append scripts
  script(type='text/javascript')
    :coffee-script
      angular.module 'myApp', ['ngMaterial', 'divesites']
      .config ($mdThemingProvider) ->
        $mdThemingProvider.theme 'default'
        .primaryPalette 'blue'
        .accentPalette 'orange'
